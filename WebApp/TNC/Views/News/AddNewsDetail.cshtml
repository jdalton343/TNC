        @if (!String.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="row">
                <div class="span-6">
                    <div class="alert alert-error">
                        <button data-dismiss="alert" class="close" type="button">×</button>
                        <strong>Error</strong> A title is Needed for the article to be published.
                    </div>
                </div>
            </div>
        }


        <form method="post" action="@Url.Content("~/News/NewsDetail_Add")">
            <fieldset>
                <div class="control-group">
                    <label for="title">Article Title:</label><input type="text" name="title" value="@Model.Title" />
                </div>
                <div class="control-group">
                    <label for="publicationDate">Date Published:</label><input type="text" name="publicationDate" value="@Model.PublicationDate" />
                </div>
                <div class="control-group">
                    <label>Author:</label>
                    <input type="text" value="@Model.Author" name="auth_name" />
                </div>
                <div class="control-group">
                    Summary:
                    <textarea rows="4" cols="200" name="summary" id="text1-box">@Model.Summary</textarea>  
                </div>
                <div class="control-group">
                    Main body:
                    <textarea rows="4" cols="200" name="body" class="mceAdvanced" id="text-box"></textarea>
                </div>
                <div class="control-group">
                    <input type="submit" class="btn btn-info" value="Add Article" />
                </div>
</fieldset>
        </form>

