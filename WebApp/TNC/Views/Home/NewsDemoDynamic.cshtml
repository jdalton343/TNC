@section PageJavascript{
    <script src="~/Assets/Bootstrap/js/bootstrap-tooltip.js"></script>
    <script src="~/Assets/Bootstrap/js/bootstrap-popover.js"></script>

    <script>
        $(document).ready(function () {
            $(".dotlink").popover({ html: true });
        });

    </script>


}

<div class="container">
 
    <div class="row">
        <div class="span12">
            <div id="map-container">
                <img src="http://www.wpclipart.com/geography/world_maps/world_map_simple.png">
                @foreach(Tuple<string, string, string> item in Model.MapItems)
                {
                    <div style="@item.Item1" class="dot"><a class="dotlink" title="@item.Item2" 
                                                              data-content="@item.Item3" 
                                                              data-placement="right" 
                                                              data-toggle="popover" 
                                                              href="#" 
                                                              data-original-title="Popover on top"><img src="~/Assets/TNC/SiteImages/dots.png" /></a></div>
                }

            </div>
        </div>

    </div>
    <div class="row">
        <div class="span6">
            @foreach(Tuple<string, string> item in Model.NewsItems)
            {
            <div class="row">
                <h2>@item.Item1</h2>
                    @Html.Raw(item.Item2)
            </div>
            }

        </div>
        <div class="span3">
            
            <h2>Menu</h2>
            <ul class="nav nav-list">
                <li class="nav-header">List header</li>
                <li class="active"><a href="#">Home</a></li>
                <li><a href="#">Library</a></li>
            </ul>
       </div>

    </div>

</div>