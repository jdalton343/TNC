@{ 
    HttpBrowserCapabilitiesBase bc = Request.Browser;
    string myBrowserInfo = bc.Browser;
    ViewBag.Browser = myBrowserInfo;
    
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.HeadTitle</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Le styles -->
    <link href="@Url.Content("~/Assets/Bootstrap/css/bootstrap.css")" rel="stylesheet">
    <link href="@Url.Content("~/Assets/Bootstrap/css/bootstrap-responsive.css")" rel="stylesheet">
    <!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
        <script src="../assets/js/html5shiv.js"></script>
    <![endif]-->
    <!-- Fav and touch icons -->
    <style>
        body{padding-top:30px;}

    </style>
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="../assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="../assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="../assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="../assets/ico/apple-touch-icon-57-precomposed.png">
    <link rel="shortcut icon" href="@Url.Content("~/Assets/TNC/SiteImages/TNC-favicon.ico")">

    <script type="text/javascript" src="@Url.Content("~/Assets/jQuery/jquery-1.10.2.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Assets/Bootstrap/js/bootstrap-dropdown.js")"></script>

    @RenderSection("PageCSS")

</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="navbar-inner" id="collapseBar">
            <!-- Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize. -->
            <button type="button" class="btn btn-navbar collapsed" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="brand" href="@Url.Content("~/")">True North Composites</a>
            <!-- Responsive Navbar Part 2: Place all navbar contents you want collapsed withing .navbar-collapse.collapse. -->
            <div class="nav-collapse collapse" style="height: 0px;">
                <ul class="nav">
                    <li><a href="@Url.Content("~/Home/Sustainability_Model")">Innovation Model</a></li>
                    <li><a href="@Url.Content("~/Home/History")">History</a></li>
                    <li><a href="@Url.Content("~/Home/Technology")">Technology</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Gallery<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Content("~/Home/Gallery")">Gallery Home</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Content("~/Home/Gallery_WindTurbines")">Wind Turbines</a></li>
                            <li><a href="@Url.Content("~/Home/Gallery_Containers")">Containers</a></li>
                            <li><a href="@Url.Content("~/Home/Gallery_SailingCats")">Sailing Cats</a></li>
                            <li><a href="@Url.Content("~/Home/Gallery_PassengerFerries")">Passenger Ferries</a></li>
                            <li><a href="@Url.Content("~/Home/Gallery_SpecialPurposeVessels")">Special Purpose Vessels</a></li>
                            <li><a href="@Url.Content("~/Home/Gallery_HousingShelters")">Housing and Shelters</a></li>
                        </ul>
                    </li>
                    <li><a href="@Url.Content("~/Home/Contact")">Contact</a></li>
                    <li><a href="@Url.Content("~/News")">News</a></li>
                    <li><a href="@Url.Content("~/Home/Blog")">Blog</a></li>
                    <li>@Html.Partial("_LogOnPartial")</li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
        <!-- /.navbar-inner -->
    </div>
    <!-- /.navbar -->
    <div class="container">
        
        
       
        @RenderBody()
        
        <hr class="featurette-divider">
        
        <footer>
            <p class="pull-right"><a href="#">Back to top</a></p>
            <p>&copy; @System.DateTime.Now.Year True North Composites, Inc. · <a href="#"><s>Privacy</s></a> · <a href="#"><s>Terms</s></a> · <a href="@Url.Content("~/Home/Attributions")">Attributions</a></p>
        </footer>

    </div>
    <!-- /.container -->



            <!-- Le javascript
            ================================================== -->
            <!-- Placed at the end of the document so the pages load faster -->
            @RenderSection("PageJavascript")
    
        <script src="@Url.Content("~/Assets/Bootstrap/js/bootstrap.js")"></script>
        <script src="@Url.Content("~/Assets/Bootstrap/js/bootstrap-dropdown.js")"></script>



</body>
</html>



